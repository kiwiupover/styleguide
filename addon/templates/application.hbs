<div class="styleguide">

{{#freestyle-guide
  title='Ember Freestyle'
  subtitle='Living Style Guide'
  }}

  {{#freestyle-section name='Visual Style' as |section|}}

    {{#freestyle-subsection name='Fonts' section=section}}

      {{#freestyle-usage title='Sentinel Book'}}
        {{freestyle-typeface fontFamily='Sentinel'}}
      {{/freestyle-usage}}

      {{#freestyle-usage title='Sentinel Bold'}}
        {{freestyle-typeface fontFamily='Sentinel' fontWeight='bold'}}
      {{/freestyle-usage}}

      {{#freestyle-usage title='Gotham Narrow'}}
        {{freestyle-typeface fontFamily='Gotham Narrow'}}
      {{/freestyle-usage}}

      {{#freestyle-usage title='Gotham Narrow Bold'}}
        {{freestyle-typeface fontFamily='Gotham Narrow' fontWeight='bold'}}
      {{/freestyle-usage}}

    {{/freestyle-subsection}}

    {{#freestyle-subsection name='Typography' section=section}}

      <div class="fg-row plx">
        {{font-style name='font-title' text='This is a big page title heading'}}
        {{font-style name='font-subtitle' text='The boys laughed and lay down again in the sand'}}
        {{font-style name='font-section-title' text="At two o'clock the guide entered a thick forest"}}
        {{font-style name='font-body-title' text="So you understand the roaring wave of"}}
        {{font-style name='font-body-featured' text="Just the good ol' boys, never meanin' no harm. Beats all you've ever saw, been in trouble with the law since the day they was born."}}
        {{font-style name='font-body-list' text="The tinsmiths"}}
        {{font-style name='font-sub-body' text="Which brought them back again to the beginning of the conversation.  Alice felt a little irritated at the Caterpillar's making such VERY  short remarks, and she drew herself up and said, very gravely 'I think,  you ought to tell me who YOU are, first. Just the good ol' boys, never meanin' no harm. Beats all you've ever saw, been in trouble with the law since the day they was born.'"}}
      </div>
    {{/freestyle-subsection}}

    {{#freestyle-subsection name='Color' section=section}}

      {{#freestyle-usage title='Outdoosy Color Palette'}}
        {{freestyle-palette
        colorPalette=colorPalette

        }}
      {{/freestyle-usage}}

      {{#freestyle-usage title='Utility Palette'}}
        {{freestyle-palette
        colorPalette=grayPalette
        title='Utility Palette'
        }}
      {{/freestyle-usage}}

    {{/freestyle-subsection}}

  {{/freestyle-section}}

  {{#freestyle-section name='Atoms' as |section|}}

    {{#freestyle-subsection name='Buttons' section=section}}
      {{#freestyle-annotation}}
        <div class="mlx">
          {{partial 'partials/buttons'}}
        </div>
      {{/freestyle-annotation}}

    {{/freestyle-subsection}}

    {{#freestyle-subsection name='Links' section=section}}
        <div class="mlx">
          <a href="#">a link</a>

          <h3>A link in text</h3>
          <p><a href="#">"How long has he been a member?"</a> he then said, turning to me; "not very long, <a href="#">I rather guess, young man.</a>"</p>
          <h3>A link in a title</h3>
          <h2><a href="#">a link</a></h2>
        </div>

    {{/freestyle-subsection}}


    {{#freestyle-subsection name='Checkbox' section=section}}
      <div class="mlx">
        <input type="checkbox" checked="checked">
        <input type="checkbox">
      </div>
    {{/freestyle-subsection}}

    {{#freestyle-subsection name='Radio Button' section=section}}
      <div class="mlx">
        <input type="radio" checked="checked">
        <input type="radio">
      </div>
    {{/freestyle-subsection}}

  {{/freestyle-section}}

  {{#freestyle-section name='Form Elements' as |section|}}
    {{!-- {{partial 'partials/input-field'}} --}}

    {{!-- {{#freestyle-subsection name='Select Tag' section=section}}

      {{#freestyle-usage 'select-tag' title='Select Tag'}}
        {{select-tag
          content=distanceOptions
          selectClass="form-control"
          value=(mut (get rvSearch "radius"))}}
      {{/freestyle-usage}}

    {{/freestyle-subsection}} --}}

    {{#freestyle-subsection name='Checkbox' section=section}}

      {{#freestyle-usage 'form-checkbox' title='Checkbox'}}
      <label>
        {{input id='id23' type="checkbox" checked=isSelected}}
        <label for='id23'>checkbox label</label>
      </label>
      {{/freestyle-usage}}

    {{/freestyle-subsection}}
  {{/freestyle-section}}

  {{partial 'partials/components'}}

  {{partial 'partials/utilities'}}

{{/freestyle-guide}}
</div>
